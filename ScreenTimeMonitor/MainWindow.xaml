<Window x:Class="ScreenTimeMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Screen Time Monitor">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Simple Tab Navigation -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="LightGray" Padding="10">
            <Button x:Name="DashboardBtn" Content="Dashboard" Click="Dashboard_Click" Margin="0,0,10,0"/>
            <Button x:Name="ReportsBtn" Content="Reports" Click="Reports_Click" Margin="0,0,10,0"/>
            <Button x:Name="SettingsBtn" Content="Settings" Click="Settings_Click"/>
        </StackPanel>
        
        <!-- Content Frame -->
        <Frame x:Name="ContentFrame" Grid.Row="1"/>
    </Grid>
</Window>
