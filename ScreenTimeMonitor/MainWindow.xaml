<Window
    x:Class="ScreenTimeMonitor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ScreenTimeMonitor"
    xmlns:viewmodels="using:ScreenTimeMonitor.ViewModels"
    xmlns:views="using:ScreenTimeMonitor.Views">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Grid.Row="0" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="16,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="{x:Bind ViewModel.Title}" 
                          Style="{StaticResource PageTitleTextBlockStyle}"
                          Margin="0,0,16,0"/>
                <Border Background="{ThemeResource AccentAAFillColorDefaultBrush}"
                        CornerRadius="12" Padding="8,4">
                    <TextBlock Text="{x:Bind ViewModel.CurrentStatus, Mode=OneWay}"
                              Foreground="White" FontSize="12"/>
                </Border>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button x:Name="ToggleMonitoringButton"
                        Content="{x:Bind GetToggleButtonText(ViewModel.IsMonitoring), Mode=OneWay}"
                        Command="{x:Bind ViewModel.ToggleMonitoringCommand}"
                        Style="{StaticResource AccentButtonStyle}"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <NavigationView Grid.Row="1" x:Name="MainNavigationView"
                       IsBackButtonVisible="Collapsed"
                       IsSettingsVisible="True"
                       PaneDisplayMode="Left"
                       SelectionChanged="MainNavigationView_SelectionChanged">
            
            <NavigationView.MenuItems>
                <NavigationViewItem Icon="Home" Content="Dashboard" Tag="Dashboard"/>
                <NavigationViewItem Icon="Document" Content="Reports" Tag="Reports"/>
            </NavigationView.MenuItems>

            <NavigationView.Content>
                <Frame x:Name="ContentFrame" Margin="24"/>
            </NavigationView.Content>
        </NavigationView>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}"
                BorderBrush="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                          Text="{x:Bind GetStatusText(ViewModel.IsMonitoring, ViewModel.IsInitialized), Mode=OneWay}"
                          VerticalAlignment="Center"
                          FontSize="12"
                          Opacity="0.8"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16">
                    <TextBlock Text="{x:Bind GetMonitoringStatusText(ViewModel.IsMonitoring), Mode=OneWay}"
                              FontSize="12" VerticalAlignment="Center"
                              Foreground="{x:Bind GetMonitoringStatusBrush(ViewModel.IsMonitoring), Mode=OneWay}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="3" 
              Background="{ThemeResource SystemControlChromeLowAcrylicWindowBrush}"
              Visibility="{x:Bind GetLoadingVisibility(ViewModel.IsInitialized), Mode=OneWay}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
                <ProgressRing IsActive="True" Width="48" Height="48"/>
                <TextBlock Text="Initializing Screen Time Monitor..." 
                          HorizontalAlignment="Center"
                          Style="{StaticResource BodyTextBlockStyle}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
